        "tez.task.resource.memory.mb" : "2048"
        {% endif -%}
      }
    },
    {% endif -%}
    {% if install_kafka == true -%}
    {
      "kafka-broker" : {
        "log.dirs" : "/hadoop/kafka-logs"
      }
    },
    {% endif -%}
